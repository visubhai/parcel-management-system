{
  "name": "parcel-management-system-root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev -w apps/frontend",
    "dev:backend": "npm run dev -w apps/backend",
    "build:frontend": "npm run build -w apps/frontend",
    "build:backend": "npm run build -w apps/backend",
    "start:frontend": "npm run start -w apps/frontend",
    "start:backend": "npm run start -w apps/backend"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^25.1.0",
    "bcryptjs": "^3.0.3",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "mongoose": "^9.1.5",
    "tsx": "^4.21.0"
  }
}
